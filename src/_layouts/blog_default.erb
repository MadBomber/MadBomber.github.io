<!doctype html>
<html lang="en-US">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="<%= data.layout %> <%= data.page_class %> <%= "has-toc-sidebar" if resource.data.layout == "blog_post" %>">
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <div class="reading-progress" aria-hidden="true"></div>
    <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>

    <nav class="blog-sub-nav" aria-label="Blog navigation">
      <div class="blog-sub-nav-inner">
        <%
          blog_path = resource&.relative_url&.chomp('/')
          blog_nav_items = [
            { title: "Latest",     url: "/blog" },
            { title: "All Posts",  url: "/blog/posts" },
            { title: "Categories", url: "/blog/categories" },
            { title: "Tags",       url: "/blog/tags" },
          ]
        %>
        <% blog_nav_items.each do |item| %>
          <%
            item_path = item[:url]
            is_active = blog_path == item_path ||
              (item_path == "/blog" && blog_path&.match?(%r{^/blog(/page/\d+)?$}))
          %>
          <a href="<%= item[:url] %>/" class="blog-sub-nav-link<%= ' active' if is_active %>">
            <%= item[:title] %>
          </a>
        <% end %>
      </div>
    </nav>

    <div class="page-wrapper">
      <% if resource.data.layout == "blog_post" %>
        <aside class="post-sidebar">
          <div class="post-meta-card">
            <time class="dt-published" datetime="<%= resource.date.iso8601 %>">
              <%= resource.date.strftime("%B %d, %Y") %>
            </time>
            <div class="meta-read-time">~<%= (resource.content.split.size / 200.0).ceil %> min read</div>
            <% if resource.data.categories&.any? %>
              <div class="meta-categories">
                <% resource.data.categories.each do |cat| %>
                  <% cat_slug = cat.downcase.gsub(/[^a-z0-9]+/, "-").gsub(/^-|-$/, "") %>
                  <a href="/blog/categories/<%= cat_slug %>/" class="meta-category"><%= cat %></a>
                <% end %>
              </div>
            <% end %>
            <% if resource.data.tags&.any? %>
              <div class="meta-tags">
                <% resource.data.tags.each do |tag| %>
                  <% slug = tag.downcase.gsub(/[^a-z0-9]+/, "-").gsub(/^-|-$/, "") %>
                  <a href="/blog/tags/<%= slug %>/" class="meta-tag"><%= tag %></a>
                <% end %>
              </div>
            <% end %>
          </div>
          <% if resource.data.sidebar.is_a?(Hash) && resource.data.sidebar["nav"] %>
            <%= render Blog::SeriesNav.new(
              series_data: site.data.navigation[resource.data.sidebar["nav"]],
              current_url: resource.relative_url
            ) %>
          <% end %>
        </aside>
      <% end %>
      <main id="main-content">
        <%= yield %>
      </main>
      <aside class="toc-sidebar" id="toc-sidebar"></aside>
    </div>

    <%= render "footer", metadata: site.metadata %>

    <% if resource.data.layout == "blog_post" %>
      <div class="reading-controls">
        <button class="theme-toggle" aria-label="Toggle light/dark mode" title="Toggle theme">
          <svg class="icon-sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
          </svg>
          <svg class="icon-moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
          </svg>
        </button>
        <button class="font-size-btn" data-action="decrease" aria-label="Decrease font size" title="Smaller text">A-</button>
        <button class="font-size-btn" data-action="increase" aria-label="Increase font size" title="Larger text">A+</button>
      </div>
    <% end %>

    <button class="back-to-top" aria-label="Back to top" hidden>
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="18 15 12 9 6 15"/>
      </svg>
    </button>
  </body>
</html>
